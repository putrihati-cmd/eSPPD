# Environment for Docker
APP_NAME="e-SPPD"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=error

# Database - Docker service name - USE ENVIRONMENT VARIABLES IN PRODUCTION
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=${POSTGRES_DB:-esppd}
DB_USERNAME=${POSTGRES_USER:-esppd_user}
DB_PASSWORD=${POSTGRES_PASSWORD:-esppd_secret}

# Redis - Docker service name - USE ENVIRONMENT VARIABLES IN PRODUCTION
REDIS_HOST=redis
REDIS_PASSWORD=${REDIS_PASSWORD:-}
REDIS_PORT=6379

CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Python Document Service - Docker service name
DOCUMENT_SERVICE_URL=http://document-service:8001

# Mail - Use log in development, configure SMTP in production
MAIL_MAILER=log

# LDAP (optional)
# LDAP_ENABLED=false
